<project name="J2EE Connector Tests" default="build" basedir=".">

  <!-- ========================================================================= -->
  <!--                          Property definitions                             -->
  <!-- ========================================================================= -->

  <property name="classes.dir" value="${basedir}/classes" />
  <property name="src.dir" value="${basedir}/src" />
  <property name="build.dir" value="${basedir}/build" />
  <property name="lib.dir" value="${basedir}/../lib" />
  <property name="war.prefix" value="JPPF_J2EE_Tests" />
  <property file="${basedir}/../build.number" />

  <!-- ========================================================================= -->
  <!--                           Classpath definitions                           -->
  <!-- ========================================================================= -->

  <path id="project.classpath">
    <pathelement location="${classes.dir}" />
    <pathelement location="${config.dir}" />
    <fileset dir="${lib.dir}" includes="**/*.jar" />
  </path>

  <!-- ========================================================================= -->
  <!--                                    Clean                                  -->
  <!-- ========================================================================= -->

  <target name="clean">
    <delete quiet="true">
      <fileset dir="${classes.dir}" includes="**/*.*" />
    </delete>
    <delete quiet="true">
      <fileset dir="${build.dir}" includes="**/*.*" />
    </delete>
  </target>

  <!-- ========================================================================= -->
  <!--                                    Init                                   -->
  <!-- ========================================================================= -->

  <target name="init" depends="clean" description="Initialize ressources">
    <mkdir dir="${build.dir}" />
  </target>

  <!-- ========================================================================= -->
  <!--                         Build everything                                  -->
  <!-- ========================================================================= -->

  <target name="build" depends="war"/>
  <target name="build.deploy.jboss" depends="build, deploy.jboss" />

  <!-- ========================================================================= -->
  <!--                     Genrates the list of test classes                     -->
  <!-- ========================================================================= -->

  <target name="generate.tests.list">
    <echo message="basedir=${basedir}, src.dir=${src.dir}"/>
    <echo message="Generating the list of test classes"/>
    <java fork="yes" classname="org.jppf.utils.TestUtils" classpathref="project.classpath">
      <jvmarg value="-server"/>
      <jvmarg value="-Xmx64m"/>
      <!--
      <arg value="${basedir}/../../client/test/java"/>
      <arg value="${basedir}/../../client/test/resources/TestClasses.txt"/>
      -->
      <arg value="${src.dir}/java"/>
      <arg value="${src.dir}/resources/TestClasses.txt"/>
    </java>       
  </target>

  <!-- ========================================================================= -->
  <!--                         Compile the application                           -->
  <!-- ========================================================================= -->

  <target name="compile" depends="init, generate.tests.list">
    <echo message="compiling the project..." />
    <javac srcdir="" destdir="${classes.dir}" debug="on" deprecation="off" optimize="on" includes="**/*.java">
      <classpath refid="project.classpath" />
      <compilerarg line="-Xlint:unchecked" />
      <src path="${src.dir}/java" />
    </javac>
    <copy todir="${classes.dir}">
      <fileset dir="${src.dir}/resources"/>
    </copy>
  </target>

  <!-- ========================================================================= -->
  <!--                     Generate the WAR file                                 -->
  <!-- ========================================================================= -->

  <target name="war" depends="compile">
    <echo message="creating the WAR ..." />
    <war warfile="${build.dir}/${war.prefix}.war" webxml="${basedir}/webapp/WEB-INF/web.xml" >
      <manifest>
        <attribute name="JPPF-Version" value="${version.number}" />
        <attribute name="JPPF-Build" value="${build.number}" />
        <attribute name="JPPF-BuildDate" value="${readable.now}" />
      </manifest>
      <zipfileset dir="${basedir}/webapp/WEB-INF" excludes="web.xml" prefix="WEB-INF" />
      <zipfileset dir="${classes.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${basedir}/webapp" includes="*.*" />
      <zipfileset dir="${basedir}/../lib" includes="junit-4.8.2.jar" prefix="WEB-INF/lib" />
    </war>
  </target>

  <!-- ========================================================================= -->
  <!--                       Deploy the WAR file                                 -->
  <!-- ========================================================================= -->

  <target name="deploy.jboss">
		<property name="jboss.deploy" value="C:/Tools/jboss-5.1.0.GA/server/jppf/deploy"/>
    <copy todir="${jboss.deploy}" file="${build.dir}/${war.prefix}.war"/>
  </target>

</project>
