<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xmlns:os-events="http://www.openspaces.org/schema/events"
       xmlns:os-remoting="http://www.openspaces.org/schema/remoting"
       xmlns:os-sla="http://www.openspaces.org/schema/sla"
       xmlns:os-jms="http://www.openspaces.org/schema/jms"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
       http://www.openspaces.org/schema/events http://www.openspaces.org/schema/events/openspaces-events.xsd
       http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/remoting/openspaces-remoting.xsd
       http://www.openspaces.org/schema/jms http://www.openspaces.org/schema/jms/openspaces-jms.xsd
       http://www.openspaces.org/schema/sla http://www.openspaces.org/schema/sla/openspaces-sla.xsd">


    <os-core:space id="space" url="jini://*/*/JPPFSpace" />

    <os-core:giga-space id="gigaSpace" space="space"/>

    <os-remoting:sync-proxy id="jppfService" giga-space="gigaSpace" interface="org.jppf.gigaspaces.JPPFService"/>        

    <!--
      The DataRemoting bean, uses the proxied dataProcessor without any knowledge of the remoting
      invocation.
    -->
    <bean id="gsclient" class="org.jppf.gigaspaces.test.GSClient">
        <property name="jppfService" ref="jppfService"/>        
    </bean>
    
</beans>