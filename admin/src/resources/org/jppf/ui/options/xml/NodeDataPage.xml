<opt:main xmlns:opt="http://www.jppf.org/Options.xsd" name="NodeDataPage" type="page">
	<!-- test comment for save -->
	<property name="label" value="Node Data"/>
	<property name="layoutConstraints" value="flowy, fill, gap rel"/>

	<!-- ===================================================================== -->
	<!--                        Buttons area                                   -->
	<!-- ===================================================================== -->

	<child name="topology.toolbar" type="Toolbar">
		<property name="componentConstraints" value="gap rel"/>
		<property name="layoutConstraints" value="insets 2"/>

		<child name="update.configuration" type="Button"/>
		<child name="show.information" type="Button"/>
		<child name="update.threads" type="Button"/>
		<child name="reset.counter" type="Button"/>
		<child name="restart.node" type="Button"/>
		<child name="shutdown.node" type="Button"/>

	</child>
	
	<child name="Actions" type="page">
		<property name="label" value="Actions"/>
		<property name="componentConstraints" value="gap rel"/>
	
		<child name="TreeStructureActions" type="page">
			<property name="label" value="Tree Structure Actions"/>
			<property name="layoutConstraints" value="flowy"/>
	
			<child name="Auto" type="Boolean">
				<property name="label" value="Toggle automatic structure refresh"/>
				<property name="tooltip" value="Toggles between automatic and manual refresh of the tree structure"/>
				<property name="value" value="true"/>
				<property name="persistent" value="true"/>
				<!--
				<listener type="script">
					<script language="groovy"><![CDATA[
						def b = option.getValue().booleanValue();
						def handler = option.findFirstWithName("/Treetable").getHandler();
						if (b) handler.startRefreshDriverTimer();
						else handler.stopRefreshDriverTimer();
					]]></script>
				</listener>
				-->
			</child>
	
			<child name="RefreshButtonPanel" type="page">
				<property name="label" value="RefreshButtonPanel"/>
		
				<child name="button.refresh" type="Button">
					<!--
					<listener type="script">
						<script language="groovy">option.findFirstWithName("/Treetable").getHandler().refresh(true)</script>
					</listener>
					-->
				</child>
		
				<child name="filler" type="Filler">
					<property name="width" value="10"/>
					<property name="height" value="10"/>
				</child>

			</child>

		</child>

		<child name="TreeDisplayActions" type="page">
			<property name="label" value="Tree Display Actions"/>
			<property name="layoutConstraints" value="flowy"/>
	
			<child name="button.expand" type="Button">
				<listener type="script">
					<script language="groovy">option.findFirstWithName("/Treetable").getTreeTable().expandAll()</script>
				</listener>
			</child>
	
			<child name="button.collapse" type="Button">
				<listener type="script">
					<script language="groovy">option.findFirstWithName("/Treetable").getTreeTable().collapseAll()</script>
				</listener>
			</child>

		</child>

	</child>

	<!-- ===================================================================== -->
	<!--                      Tree table area                                  -->
	<!-- ===================================================================== -->

	<child name="treeTableContainer" type="page">
		<property name="layoutConstraints" value="fill, nogrid"/>
		<property name="componentConstraints" value="grow, span, push, width 0"/>
	
		<child name="Treetable" type="NodeDataPanel">
			<property name="componentConstraints" value="grow, width 0"/>
			<property name="value" value=""/>
		</child>

	</child>
	
</opt:main>
