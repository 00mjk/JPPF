<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true">
  <Appenders>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout" pattern="%d [%-5p][%-20.20t][%c.%M(%L)]: %m%n"/>
    </Appender>
    <Appender type="File" name="File" fileName="jppf-node.log" append="false">
      <Layout type="PatternLayout">
        <Pattern>%d [%-5p][%-20.20t][%c.%M(%L)]: %m%n</Pattern>
      </Layout>
    </Appender>
  </Appenders>
  <Loggers>
    <Logger name="log4j.logger.org.jppf.utils.JPPFDefaultUncaughtExceptionHandler" level="debug" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>