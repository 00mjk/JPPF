<project name='LocalTest' default="run.node" basedir=".">

	<!-- ========================================================================= -->
	<!--                          Property definitions                             -->
	<!-- ========================================================================= -->

	<property name="lib.dir" value="${basedir}/lib"/>
	<property name="config.dir" value="${basedir}/config"/>

	<!-- ========================================================================= -->
	<!--                           Classpath definitions                           -->
	<!-- ========================================================================= -->

  <path id="run.classpath">
		<pathelement location="${config.dir}"/>
		<pathelement location="${classes.dir}"/>
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
  </path>

	<!-- ========================================================================= -->
	<!--                     Run the framework processes                           -->
	<!-- ========================================================================= -->

	<!-- to run a single node -->
	<target name="run.node">
		<java fork="yes" classname="org.jppf.classloader.NodeLauncher" classpathref="run.classpath">
			<jvmarg value="-server" />
			<jvmarg value="-Xmx128m" />
			<jvmarg value="-Dlog4j.configuration=log4j-node.properties" />
			<jvmarg value="-Djppf.config=jppf-node.properties" />
		</java>       
	</target>

</project> 
