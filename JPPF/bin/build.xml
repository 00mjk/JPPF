<project name="JPPF" default="build" basedir="..">

	<!-- ========================================================================= -->
	<!--                          Property definitions                             -->
	<!-- ========================================================================= -->

	<property name="common"                value="${basedir}/../common"/>
	<property name="admin"                 value="${basedir}/../admin"/>
	<property name="client"                value="${basedir}/../client"/>
	<property name="node"                  value="${basedir}/../node"/>
	<property name="server"                value="${basedir}/../server"/>
	<property name="demo"                  value="${basedir}/../demo"/>
	<property name="jca-client"            value="${basedir}/../jca-client"/>
	<property name="jppfQuickStart"        value="${basedir}/../JPPFQuickStart"/>
	<property name="gigaspaces"            value="${basedir}/../JPPF-GigaSpaces"/>
	<property name="application.template"  value="${basedir}/../application-template"/>
	<property name="samples-pack"          value="${basedir}/../samples-pack"/>

	<property name="build.properties.file" value="${basedir}/bin/build.properties"/>
  <property file="${gigaspaces}/build.properties"/>
  <property file="${build.properties.file}"/>
	<property name="build.number.file"     value="${basedir}/bin/build.number"/>
	<property name="bin"                   value="${basedir}/bin"/>	
	<property name="installer"             value="${bin}/installer"/>
	<property name="data"                  value="${basedir}/data"/>	
	<property name="config"                value="${basedir}/config"/>	
	<property name="build"                 value="${basedir}/build"/>	
	<property name="deploy"                value="${build}/deploy"/>	
	<property name="deploy.lib"            value="${deploy}/lib"/>
	<property name="deploy.build"          value="${deploy}/build"/>
	<property name="deploy.config"         value="${deploy}/config"/>	
	<property name="classes"               value="${build}/classes"/>
	<property name="src"                   value="${basedir}/src"/>
	<property name="lib"                   value="${basedir}/lib"/>
	<property name="docs"                  value="${basedir}/docs"/>
	<property name="home"                  value="${docs}/home"/>
	<property name="examples"              value="${basedir}/examples"/>
	<property name="javadoc"               value="${home}/api-2.0"/>
	<property name="app.jar.file"          value="${ant.project.name}.jar"/>
	<property name="license.file"          value="LICENSE.txt"/>
	<property name="runtime"               value="${build}/runtime"/>
	<property name="runtime.driver"        value="${build}/runtime/driver"/>
	<property name="runtime.multiplexer"   value="${build}/runtime/multiplexer"/>
	<property name="runtime.node"          value="${build}/runtime/node"/>
	<property name="runtime.gui"           value="${build}/runtime/gui"/>
	<property name="app.ver"               value="${ant.project.name}-${version.number}"/>

	<!-- ========================================================================= -->
	<!--                           Classpath definitions                           -->
	<!-- ========================================================================= -->

	<path id="project.classpath">
		<pathelement location="${common}/classes"/>
		<pathelement location="${node}/classes"/>
		<pathelement location="${admin}/classes"/>
		<pathelement location="${client}/classes"/>
		<pathelement location="${server}/classes"/>
		<pathelement location="${demo}/classes"/>
		<pathelement location="${jca-client}/classes"/>
		<fileset dir="${lib}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

  <path id="javadoc.classpath">
		<pathelement location="${bin}"/>
    <path refid="project.classpath"/>	
		<pathelement location="${gs.home}/lib/jini/jsk-lib.jar"/>
		<pathelement location="${gs.home}/lib/jini/jsk-platform.jar"/>
		<pathelement location="${gs.home}/lib/openspaces/openspaces.jar"/>
		<pathelement location="${gs.home}/lib/spring/spring.jar"/>
		<pathelement location="${gs.home}/lib/JSpaces.jar"/>
  </path>

  <path id="run.classpath">
		<pathelement location="${config}"/>
    <path refid="project.classpath"/>	
  </path>

	<!-- ========================================================================= -->
	<!--                                    Clean                                  -->
	<!-- ========================================================================= -->

  <target name="clean" description="">
    <delete dir="${build}" quiet="true"/>
  </target>               

  <target name="clean.all" depends="clean.deploy" description="">
    <delete dir="${node}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${common}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${server}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${cient}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${admin}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${demo}/classes" quiet="true" includes="**/*.*"/>
    <delete dir="${jca-client}/classes" quiet="true" includes="**/*.*"/>
  </target>               

  <target name="clean.deploy" description="clean the deploy folder">
    <delete dir="${deploy}" quiet="true"/>
	  <delete dir="${runtime}" quiet="true"/>
  </target>               

	<!-- ========================================================================= -->
	<!--                                    Init                                   -->
	<!-- ========================================================================= -->

	<target name="init" description="Initialize ressources">
 		<mkdir dir="${build}"/>
		<available file="${NSIS.home}/makensis.exe" property="NSIS.present"/>
		<available type="dir" file="${basedir}/../samples-pack" property="samples.pack.present"/>
		<available type="dir" file="${basedir}/../JPPFQuickStart" property="jppfQuickStart.present"/>
		<!-- Format the build number to a 4 figures integer with leading zeroes if required -->
		<!-- The build number is also incremented by 1                                      -->
		<propertyfile file="${build.number.file}">
			<entry key="build.number" type="int" default="0000" operation="+" pattern="0000" />
		</propertyfile>
		<!-- Read the build number -->
	  <property file="${build.number.file}"/>
		<tstamp>
			<format property="now" pattern="yyyyMMdd"/>
		</tstamp>
	</target>

	<target name="init.deploy" description="Initialize ressources">
 		<mkdir dir="${runtime.driver}"/>
 		<mkdir dir="${runtime.node}"/>
	</target>

	<!-- ========================================================================= -->
	<!--                           Build the application                           -->
	<!-- ========================================================================= -->

  <target name="build" depends="init, compile, jar"/>
	<target name="rebuild" depends="clean.all, init, compile, jar"/>
	<target name="test" depends="clean, init, compile, jar, package, runtime, javadoc"/>
	<target name="deploy"
		depends="clean.all, rebuild, javadoc, init.deploy, jca, package, runtime, samples.pack, jppf.gigaspaces, j2ee.connector, application.template, user.guide, installer"/>
	<target name="deploy.nojavadoc"
		depends="clean.all, rebuild,          init.deploy, jca, package, runtime, samples.pack, jppf.gigaspaces, j2ee.connector, application.template, user.guide, installer"/>
  <target name="deploy.splash">
  	<splash showduration="500" imageurl="http://www.jppf.org/images/logo1.gif"/>
  	<antcall target="deploy"/>
  </target>

	<!-- ========================================================================= -->
	<!--                         Compile the application                           -->
	<!-- ========================================================================= -->

	<target name="compile" description="Compile" depends="init, i18n">
		<antcall target="compile.module"><param name="path" value="${node}"/></antcall>
		<antcall target="compile.module"><param name="path" value="${common}"/></antcall>
		<antcall target="compile.module"><param name="path" value="${client}"/></antcall>
		<antcall target="compile.module"><param name="path" value="${admin}"/></antcall>
		<antcall target="compile.module"><param name="path" value="${server}"/></antcall>
		<antcall target="compile.module"><param name="path" value="${demo}"/></antcall>
  </target>

	<target name="compile.module">
 		<mkdir dir="${path}/classes"/>
		<javac srcdir="" destdir="${path}/classes"
			debug="on" deprecation="off" optimize="on" includes="**/*.java">
	    <classpath refid="project.classpath"/>
	    <compilerarg line="-Xlint:unchecked"/>
			<src path="${path}/src/java"/>
	    <src path="${path}/src/resources"/>
		</javac>
		<copy todir="${path}/classes">
			<fileset dir="${path}/src/resources">
				<exclude name="**/package.html"/>
			</fileset>
		</copy>
  </target>

	<!-- ========================================================================= -->
	<!--              Convert native translations to ascii                         -->
	<!-- ========================================================================= -->

	<target name="i18n" description="Convert native translations to ascii" depends="init">
		<property name="i18n.dir" value="${admin}/src/resources/org/jppf/ui/i18n"/> 
		<native2ascii encoding="windows-1251" src="${i18n.dir}/native/ru" dest="${i18n.dir}" includes="**/*.properties"/>
  </target>

	<!-- ========================================================================= -->
	<!--                     Generate the JCA resource adapter                     -->
	<!-- ========================================================================= -->

	<target name="jca" description="Generate resource adapter for various application servers" depends="init">
		<ant antfile="${basedir}/../jca-client/build.xml" inheritall="false"/>
  </target>

	<!-- ========================================================================= -->
	<!--                         Generate the samples pack                         -->
	<!-- ========================================================================= -->

	<taskdef name="java2html" classname="de.java2html.anttasks.Java2HtmlTask" classpath="${lib}/java2html_50/java2html.jar"/>

	<target name="samples.pack" description="Generate the packaging for the samples pack"
		depends="init, build" if="samples.pack.present">
		<copy todir="${samples-pack}/shared/lib">
			<fileset dir="${build}">
				<include name="jppf*.jar"/>
			</fileset>
		</copy>
		<java2html srcdir="${samples-pack}/CustomLoadBalancer" destdir="${samples-pack}/CustomLoadBalancer" includes="**/*.java"
			style="eclipse" showLineNumbers="false" showFileName="true" showTableBorder="false"/>
		<java2html srcdir="${samples-pack}/TaskNotifications" destdir="${samples-pack}/TaskNotifications" includes="**/*.java, **/services/*.*"
			style="eclipse" showLineNumbers="false" showFileName="true" showTableBorder="false"/>
		<property name="samples.pack.prefix" value="${app.ver}-samples-pack"/>
		<property name="samples.pack.file" value="${build}/${samples.pack.prefix}.zip"/>
		<delete file="samples.pack.file" quiet="true"/>
		<zip destfile="${samples.pack.file}">
			<zipfileset dir="${basedir}/../samples-pack" prefix="${samples.pack.prefix}">
				<exclude name="**/*.log"/>
				<exclude name="**/javadoc/**/*.*"/>
			</zipfileset>
		</zip>
    <delete dir="${home}/samples-pack" quiet="true"/>
 		<mkdir dir="${home}/samples-pack"/>
		<copy todir="${home}/samples-pack">
			<fileset dir="${samples-pack}">
				<include name="**/*.java"/>
				<include name="CustomLoadBalancer/**/*.properties"/>
				<include name="**/*.html"/>
				<include name="shared/images/*.*"/>
				<include name="DataDependency/images/*.gif"/>
				<include name="NodeTray/images/*.gif"/>
			</fileset>
		</copy>
		<move file="${home}/samples-pack/samples-pack-Readme.html" tofile="${home}/samples-pack/index.html"/>
		<delete><fileset dir="${samples-pack}/CustomLoadBalancer" includes="**/*.java.html"/></delete>
		<delete><fileset dir="${samples-pack}/TaskNotifications" includes="**/*.java.html, **/services/*.html"/></delete>
  </target>

	<!-- ========================================================================= -->
	<!--                 Generate the JPPF-GigaSpaces integration                  -->
	<!-- ========================================================================= -->

	<target name="jppf.gigaspaces" description="Generate the JPPF-GigaSpaces integration package" depends="init, build">
		<copy todir="${gigaspaces}/JPPF-GigaSpaces-Common/lib">
			<fileset dir="${build}">
				<include name="jppf-client.jar"/>
				<include name="jppf-common*.jar"/>
			</fileset>
		</copy>
		<ant antfile="${gigaspaces}/build.xml" target="build" inheritall="false"/>
		<property name="gigaspaces.prefix" value="${app.ver}-GigaSpaces"/>
		<property name="gigaspaces.file" value="${build}/${gigaspaces.prefix}.zip"/>
		<delete file="gigaspaces.file" quiet="true"/>
		<zip destfile="${gigaspaces.file}">
			<zipfileset dir="${gigaspaces}" prefix="${gigaspaces.prefix}">
				<exclude name="**/CVS/**"/>
				<exclude name="**/*.log"/>
				<exclude name="**/*.classpath"/>
				<exclude name="**/*.project"/>
		</zipfileset>
		</zip>
  </target>

	<!-- ========================================================================= -->
	<!--                     Build the application jar files                       -->
	<!-- ========================================================================= -->

	<target name="jar" description="generates the application jar" depends="compile">
		<antcall target="jar.module"><param name="module" value="common"/></antcall>
		<antcall target="jar.module"><param name="module" value="node"/><param name="jar" value="common-node"/></antcall>
		<antcall target="jar.module"><param name="module" value="admin"/></antcall>
		<antcall target="jar.module"><param name="module" value="client"/></antcall>
		<antcall target="jar.module"><param name="module" value="server"/></antcall>
		<antcall target="jar.module"><param name="module" value="demo"/></antcall>
	</target>

	<target name="jar.module">
		<condition property="jar" value="${module}">
			<not>
				<isset property="jar"/>
			</not>
		</condition>
		<tstamp>
			<format property="readable.now" pattern="d-MMMM-yyyy hh:mm"/>
		</tstamp>
    <jar jarfile="${build}/jppf-${jar}.jar" index="true">
			<fileset dir="${basedir}/../${module}/classes"/>
			<fileset file="${bin}/build.number"/>
      <manifest>
        <attribute name="JPPF-Version" value="${version.number}"/>
        <attribute name="JPPF-Build" value="${build.number}"/>
			  <attribute name="JPPF-BuildDate" value="${readable.now}"/>
      </manifest>
    </jar>
  </target>

	<!-- ========================================================================= -->
	<!--                 Package the application for deployment                    -->
	<!-- ========================================================================= -->

	<target name="package" description="package the application into a release zip file" depends="rebuild">
		<!--<property name="release.file" value="${build}/${ant.project.name}-full-src-${version.number}-${build.number}-${now}.zip"/>-->
		<property name="zip.prefix" value="${app.ver}-full-src"/>
		<property name="release.file" value="${build}/${zip.prefix}.zip"/>
		<delete file="${release.file}" quiet="true"/>
		<zip destfile="${release.file}">
			<zipfileset dir="${basedir}" prefix="${zip.prefix}/JPPF">
				<include name="build/jppf*.jar"/>
				<include name="bin/**/*.*"/>
				<include name="config/**/*.*"/>
				<!--<include name="docs/api/**/*.*"/>-->
				<include name="lib/**/*.*"/>
				<include name="${license.file}"/>
				<include name="JPPF-3rd-party.html"/>
			</zipfileset>
			<zipfileset dir="${node}" prefix="${zip.prefix}/node"/>
			<zipfileset dir="${common}" prefix="${zip.prefix}/common"/>
			<zipfileset dir="${client}" prefix="${zip.prefix}/client"/>
			<zipfileset dir="${server}" prefix="${zip.prefix}/server"/>
			<zipfileset dir="${admin}" prefix="${zip.prefix}/admin"/>
			<zipfileset dir="${demo}" prefix="${zip.prefix}/demo" excludes="*.log"/>
			<zipfileset dir="${jca-client}" prefix="${zip.prefix}/jca-client"/>
		</zip>
	</target>

	<!-- ========================================================================= -->
	<!--             Package the j2ee connector for deployment                     -->
	<!-- ========================================================================= -->

	<target name="j2ee.connector" description="" depends="rebuild">
		<!--<property name="connector.release.file" value="${build}/${ant.project.name}-j2ee-connector-${version.number}-${build.number}-${now}.zip"/>-->
		<property name="j2ee.prefix" value="${app.ver}-j2ee-connector"/>
		<property name="connector.release.file" value="${build}/${j2ee.prefix}.zip"/>
		<delete file="${connector.release.file}" quiet="true"/>
		<zip destfile="${connector.release.file}">
			<zipfileset dir="${jca-client}" prefix="${j2ee.prefix}" excludes=".*"/>
		</zip>
	</target>

	<!-- ========================================================================= -->
	<!--          Package the application template for deployment                  -->
	<!-- ========================================================================= -->

	<target name="application.template" description="" depends="init">
		<delete>
	    <fileset dir="." includes="jppf*.jar"/>
	  </delete>
		<copy todir="${application.template}/lib">
			<fileset dir="${build}">
				<include name="jppf-common-node.jar"/>
				<include name="jppf-common.jar"/>
				<include name="jppf-client.jar"/>
			</fileset>
			<fileset dir="${lib}/log4j" includes="*.jar"/>
			<fileset dir="${lib}/slf4j" includes="*.jar"/>
		</copy>
    <delete dir="${application.template}/classes" quiet="true"/>
 		<mkdir dir="${application.template}/classes"/>
		<javac srcdir="" destdir="${application.template}/classes"
			debug="on" deprecation="off" optimize="on" includes="**/*.java">
	    <classpath refid="project.classpath"/>
	    <compilerarg line="-Xlint:unchecked"/>
			<src path="${application.template}/src"/>
		</javac>
		<property name="template.prefix" value="${app.ver}-application-template"/>
		<property name="template.release.file" value="${build}/${template.prefix}.zip"/>
		<delete file="${template.release.file}" quiet="true"/>
		<zip destfile="${template.release.file}">
			<zipfileset dir="${application.template}" prefix="${template.prefix}" excludes=".*"/>
		</zip>
	</target>

	<!-- ========================================================================= -->
	<!--                 Package the runtime components for deployment             -->
	<!-- ========================================================================= -->

	<target name="runtime" description="" depends="rebuild">
		<antcall target="runtime.driver"/>
		<antcall target="runtime.node"/>
		<antcall target="runtime.gui"/>
		<antcall target="runtime.multiplexer"/>
    <delete dir="${runtime}" quiet="true"/>
	</target>

	<!-- =========== Driver packaging =========== -->

	<target name="runtime.driver">
		<mkdir dir="${runtime.driver}/lib"/>
		<copy todir="${runtime.driver}/lib">
			<fileset dir="${build}">
				<include name="jppf-common-node.jar"/>
				<include name="jppf-common.jar"/>
				<include name="jppf-server.jar"/>
			</fileset>
			<fileset dir="${lib}/log4j" includes="*.jar"/>
			<fileset dir="${lib}/slf4j" includes="*.jar"/>
		</copy>
		<copy tofile="${runtime.driver}/${license.file}" file="${basedir}/${license.file}"/>
		<copy todir="${runtime.driver}"><fileset dir="${config}/driver"/></copy>
		<copy tofile="${runtime.driver}/config/jppf.policy" file="${config}/node/config/jppf.policy"/>
		<property name="driver.prefix" value="${app.ver}-driver"/>
		<property name="runtime.driver.file" value="${build}/${driver.prefix}.zip"/>
		<delete file="${runtime.driver.file}" quiet="true"/>
		<zip destfile="${runtime.driver.file}">
			<zipfileset dir="${runtime.driver}" prefix="${driver.prefix}"/>
		</zip>
    <delete dir="${runtime.driver}" quiet="true"/>
	</target>

	<!-- =========== Node packaging =========== -->

	<target name="runtime.node">
		<mkdir dir="${runtime.node}/lib"/>
		<copy todir="${runtime.node}/lib">
			<fileset dir="${build}" includes="jppf-common-node.jar"/>
			<fileset dir="${lib}/log4j" includes="*.jar"/>
			<fileset dir="${lib}/slf4j" includes="*.jar"/>
		</copy>
		<copy tofile="${runtime.node}/${license.file}" file="${basedir}/${license.file}"/>
		<copy todir="${runtime.node}"><fileset dir="${config}/node"/></copy>
		<property name="node.prefix" value="${app.ver}-node"/>
		<property name="runtime.node.file" value="${build}/${node.prefix}.zip"/>
		<delete file="${runtime.node.file}" quiet="true"/>
		<zip destfile="${runtime.node.file}">
			<zipfileset dir="${runtime.node}" prefix="${node.prefix}"/>
		</zip>
    <delete dir="${runtime.node}" quiet="true"/>
	</target>

	<!-- =========== GUI packaging =========== -->

	<target name="runtime.gui">
		<mkdir dir="${runtime.gui}/lib"/>
		<copy todir="${runtime.gui}/lib">
			<fileset dir="${build}">
				<include name="jppf-common-node.jar"/>
				<include name="jppf-common.jar"/>
				<include name="jppf-server.jar"/>
				<include name="jppf-client.jar"/>
				<include name="jppf-admin.jar"/>
			</fileset>
			<fileset dir="${lib}/log4j" includes="*.jar"/>
			<fileset dir="${lib}/slf4j" includes="*.jar"/>
			<fileset dir="${lib}/JFreeChart" includes="*.jar"/>
			<fileset dir="${lib}/Rhino" includes="*.jar"/>
			<fileset dir="${lib}/JGoodies" includes="*.jar"/>
			<fileset dir="${lib}/Groovy" includes="*.jar"/>
			<fileset dir="${lib}/MigLayout" includes="*.jar"/>
		</copy>
		<copy tofile="${runtime.gui}/${license.file}" file="${basedir}/${license.file}"/>
		<copy todir="${runtime.gui}"><fileset dir="${config}/gui"/></copy>
		<property name="gui.prefix" value="${app.ver}-admin-ui"/>
		<property name="runtime.gui.file" value="${build}/${gui.prefix}.zip"/>
		<delete file="${runtime.gui.file}" quiet="true"/>
		<zip destfile="${runtime.gui.file}">
			<zipfileset dir="${runtime.gui}" prefix="${gui.prefix}"/>
		</zip>
    <delete dir="${runtime.gui}" quiet="true"/>
	</target>

	<!-- =========== Multiplexer packaging =========== -->

	<target name="runtime.multiplexer">
		<mkdir dir="${runtime.multiplexer}/lib"/>
		<copy todir="${runtime.multiplexer}/lib">
			<fileset dir="${build}">
				<include name="jppf-common-node.jar"/>
				<include name="jppf-common.jar"/>
			</fileset>
			<fileset dir="${lib}/log4j" includes="*.jar"/>
			<fileset dir="${lib}/slf4j" includes="*.jar"/>
		</copy>
		<copy tofile="${runtime.multiplexer}/${license.file}" file="${basedir}/${license.file}"/>
		<copy todir="${runtime.multiplexer}"><fileset dir="${config}/multiplexer"/></copy>
		<property name="multiplexer.prefix" value="${app.ver}-multiplexer"/>
		<property name="runtime.multiplexer.file" value="${build}/${multiplexer.prefix}.zip"/>
		<delete file="${runtime.multiplexer.file}" quiet="true"/>
		<zip destfile="${runtime.multiplexer.file}">
			<zipfileset dir="${runtime.multiplexer}" includes="**/*.*" prefix="${multiplexer.prefix}"/>
		</zip>
    <delete dir="${runtime.multiplexer}" quiet="true"/>
	</target>

	<!-- ========================================================================= -->
	<!--                    Generate the IzPack installer jar                      -->
	<!-- ========================================================================= -->
	<!-- This requires the property  ${izpack.home} defined in build.properties    -->
	<!-- It must point to the root installation directory of IzPack                -->
	<!-- ========================================================================= -->

	<target name="installer">
		<available file="${izpack.home}/lib/standalone-compiler.jar" property="izpack.present"/>
		<antcall target="installer.package"/>
	</target>

	<target name="installer.package" description="package the jar installer" if="izpack.present">
		<taskdef onerror="ignore" name="izpack" classpath="${izpack.home}/lib/standalone-compiler.jar" classname="com.izforge.izpack.ant.IzPackTask"/>
		<property name="install.prefix" value="${build}/${app.ver}"/>
		<property name="install.file" value="${install.prefix}-Installer"/>
		<delete file="${install.file}.jar" quiet="true"/>
		<mkdir dir="${install.prefix}"/>
		<unzip src="${install.prefix}-full-src.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-driver.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-node.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-admin-ui.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-application-template.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-User-Guide.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-api.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-samples-pack.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-j2ee-connector.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-GigaSpaces.zip" dest="${install.prefix}"/>
		<unzip src="${install.prefix}-multiplexer.zip" dest="${install.prefix}"/>

		<!-- Generate offline installer -->
		<!--
		<izpack input="${installer}/install.xml" output="${install.file}.jar" installerType="standard" inheritAll="true" basedir="${basedir}" compression="deflate" compressionlevel="9"/>
    -->

		<!-- Generate web installer -->
		<property name="web.installer.dir" value="${home}/download/${version.number}"/>
		<delete dir="${web.installer.dir}" quiet="true"/>
		<mkdir dir="${web.installer.dir}"/>
		<copy file="${installer}/jppf_ws.jnlp" todir="${home}/download"/>
		<replace file="${home}/download/jppf_ws.jnlp" token="@version@" value="${version.number}"/>
		<property name="web.installer.file" value="${web.installer.dir}/${app.ver}-Web-Installer.jar"/>
		<izpack input="${installer}/install.xml" output="${web.installer.file}" installerType="web" inheritAll="true" basedir="${basedir}" compression="deflate" compressionlevel="9"/>

		<!-- Sign the web installer jar -->
		<exec executable="c:/jdk1.5.0/bin/jarsigner.exe">
			<arg value="-keystore"/>
			<arg value="C:\Workspaces\SourceForge\JPPF\bin\security\jppf.keystore"/>
			<arg value="-storepass"/>
			<arg value="Faz600er"/>
			<arg value="-keypass"/>
			<arg value="Faz600er"/>
			<arg value="${web.installer.file}"/>
			<arg value="jppf"/>
		</exec>

		<delete dir="${install.prefix}" quiet="true"/>
	</target>

	<!-- ========================================================================= -->
	<!--                    Generate the findbugs reports                          -->
	<!-- ========================================================================= -->
	<!-- This requires the property ${findbugs.home} defined in build.properties   -->
	<!-- It must point to the root installation directory of findbugs              -->
	<!-- ========================================================================= -->

	<target name="findbugs">
		<available file="${findbugs.home}/lib/findbugs-ant.jar" property="findbugs.present"/>
		<antcall target="findbugs.package"/>
	</target>

	<property name="findbug.jvm.flags" value="-server -Xmx512m -Duser.language=en -Duser.country=US"/>

	<target name="findbugs.package" description="run findbugs on all modules" if="findbugs.present">
		<path id="findbugs.classpath">
			<fileset dir="${findbugs.home}/lib" includes="*.jar"/>
		</path>
		<taskdef onerror="ignore" name="findbugs" classname="edu.umd.cs.findbugs.anttask.FindBugsTask" classpathref="findbugs.classpath"/>

		<property name="output.type" value="xml"/>
		<delete dir="${build}/findbugs" quiet="true"/>
		<mkdir dir="${build}/findbugs"/>

		<antcall target="findbugs.module"><param name="path" value="node"/></antcall>
		<antcall target="findbugs.module"><param name="path" value="common"/></antcall>
		<antcall target="findbugs.module"><param name="path" value="client"/></antcall>
		<antcall target="findbugs.module"><param name="path" value="admin"/></antcall>
		<antcall target="findbugs.module"><param name="path" value="server"/></antcall>
		<antcall target="findbugs.module"><param name="path" value="demo"/></antcall>

		<antcall target="findbugs.generic">
			<param name="foutput" value="application-template"/>
			<param name="fsrc" value="${application.template}/src"/>
			<param name="fclass" value="${application.template}/classes"/>
		</antcall>
		<antcall target="findbugs.generic">
			<param name="foutput" value="jca-client-jca"/>
			<param name="fsrc" value="${jca-client}/src/java"/>
			<param name="fclass" value="${jca-client}/classes/jca"/>
		</antcall>
		<antcall target="findbugs.generic">
			<param name="foutput" value="jca-client-j2eeclient"/>
			<param name="fsrc" value="${jca-client}/src/j2eeclient"/>
			<param name="fclass" value="${jca-client}/classes/j2eeclient"/>
		</antcall>
		<antcall target="findbugs.generic">
			<param name="foutput" value="gigaspaces-common"/>
			<param name="fsrc" value="${gigaspaces}/JPPF-GigaSpaces-Common/src"/>
			<param name="fclass" value="${gigaspaces}/JPPF-GigaSpaces-Common/classes"/>
		</antcall>
		<antcall target="findbugs.generic">
			<param name="foutput" value="gigaspaces-client"/>
			<param name="fsrc" value="${gigaspaces}/JPPF-GigaSpaces-Client/src"/>
			<param name="fclass" value="${gigaspaces}/JPPF-GigaSpaces-Client/classes"/>
		</antcall>
		<antcall target="findbugs.generic">
			<param name="foutput" value="gigaspaces-pu"/>
			<param name="fsrc" value="${gigaspaces}/JPPF-GigaSpaces-ProcessingUnit/src"/>
			<param name="fclass" value="${gigaspaces}/JPPF-GigaSpaces-ProcessingUnit/classes"/>
		</antcall>
	</target>

	<target name="findbugs.module">
    <findbugs home="${findbugs.home}" output="${output.type}" outputFile="${build}/findbugs/${path}-findbugs.${output.type}" jvmargs="${findbug.jvm.flags}">
      <auxClasspath>
      	<fileset dir="${lib}" includes="**/*.jar"/>
      	<fileset dir="${build}" includes="*.jar"/>
      </auxClasspath>
      <sourcePath path="${basedir}/../${path}/src/java"/>
      <class location="${basedir}/../${path}/classes"/>
    </findbugs>
	</target>

  <path id="findbugs.generic.classpath">
		<pathelement location="${jca-client}/classes/j2eeclient"/>
		<pathelement location="${jca-client}/classes/jca"/>
		<pathelement location="${gigaspaces}/JPPF-GigaSpaces-Common/classes"/>
		<pathelement location="${gigaspaces}/JPPF-GigaSpaces-Common/lib/spring.jar"/>
		<pathelement location="${gigaspaces}/JPPF-GigaSpaces-Client/classes"/>
		<pathelement location="${gigaspaces}/JPPF-GigaSpaces-ProcessingUnit/classes"/>
  	<fileset dir="${lib}" includes="**/*.jar"/>
  	<fileset dir="${build}" includes="*.jar"/>
  </path>

	<target name="findbugs.generic">
    <findbugs home="${findbugs.home}" output="${output.type}" outputFile="${build}/findbugs/${foutput}-findbugs.${output.type}" jvmargs="${findbug.jvm.flags}">
    	<auxClasspath refid="findbugs.generic.classpath"/>
      <sourcePath path="${fsrc}"/>
      <class location="${fclass}"/>
    </findbugs>
	</target>

	<!-- ========================================================================= -->
	<!--                     Build the web site content                            -->
	<!-- ========================================================================= -->

  <target name="doc" depends="doc.screenshots, doc.home">
	</target>

  <target name="doc.home" description="generates the project web site pages">
		<antcall target="doc.gen">
			<param name="source" value="${home}/doc-source/home"/>
			<param name="dest" value="${home}/"/>
			<param name="templates" value="${home}/templates/"/>
		</antcall>
  	<copy toDir="${home}/wiki/includes" file="${home}/jppf_header.php"/>
  	<!--<copy toDir="${home}/forums" file="${home}/jppf_header.php"/>-->
	</target>

	<target name="doc.gen" description="generates the project web site pages">
		<java fork="yes" classname="org.jppf.doc.HtmlDocGenerator" classpathref="run.classpath">
			<jvmarg value="-Xmx128m" />
			<arg value="-s"/>
			<arg value="${source}"/>
			<arg value="-d"/>
			<arg value="${dest}"/>
			<arg value="-t"/>
			<arg value="${templates}"/>
			<arg value="-r"/>
		</java>       
	</target>

	<target name="doc.screenshots" description="generates the project web site pages">
		<java fork="yes" classname="org.jppf.utils.ThumbnailGenerator" classpathref="run.classpath">
			<jvmarg value="-Xmx128m" />
			<arg value="${home}/screenshots"/>
			<arg value="72"/>
			<arg value="72"/>
			<arg value="${home}/templates"/>
			<arg value="9"/>
		</java>       
	</target>

	<!-- ========================================================================= -->
	<!--                 Generate the User Guide redistributable                   -->
	<!-- ========================================================================= -->

	<target name="user.guide" description="Generate the user guide zip file">
		<property name="user.guide.file" value="${build}/JPPF-${version.number}-User-Guide.zip"/>
		<delete file="${user.guide.file}" quiet="true"/>
		<zip destfile="${user.guide.file}">
			<zipfileset dir="${home}/documents" includes="JPPF-*.pdf" prefix="JPPF-${version.number}-User-Guide"/>
		</zip>
	</target>

	<!-- ========================================================================= -->
	<!--                        Generate the Javadoc                               -->
	<!-- ========================================================================= -->

	<target name="javadoc" description="Generate all java doc">
		<echo message="gs.home = ${gs.home}"/>
    <delete dir="${javadoc}" quiet="true"/>
    <mkdir dir="${javadoc}"/>
		<javadoc destdir="${javadoc}" access="protected" Windowtitle="JPPF"
			packagenames="**/*.*" classpathref="javadoc.classpath" verbose="false" use="true"
			stylesheetfile="${bin}/javadoc.css" additionalparam="-quiet">
			<packageset dir="${node}/src/java"/>
			<packageset dir="${common}/src/java"/>
			<packageset dir="${client}/src/java"/>
			<packageset dir="${server}/src/java"/>
			<packageset dir="${admin}/src/java"/>
			<packageset dir="${demo}/src/java"/>
			<packageset dir="${jca-client}/src/java"/>
			<packageset dir="${gigaspaces}/JPPF-GigaSpaces-Common/src"/>
			<packageset dir="${gigaspaces}/JPPF-GigaSpaces-Client/src"/>
			<packageset dir="${gigaspaces}/JPPF-GigaSpaces-ProcessingUnit/src"/>
			<link href="http://java.sun.com/j2se/1.5.0/docs/api"/>
			<link href="http://java.sun.com/javaee/5/docs/api"/>
			<link href="http://junit.sourceforge.net/javadoc"/>
			<link href="http://xstream.codehaus.org/javadoc"/>
			<doctitle><![CDATA[JPPF v${version.number}]]></doctitle>
			<header>
				<![CDATA[
					<table>
					<tr>
						<td valign="center">
							<a href="http://www.jppf.org" target="_top">
								<img src="http://www.jppf.org/images/jppf_group_large.gif" border="0"/>
							</a>
						</td>
					</tr>
					</table>
				]]>
			</header>
			<bottom>
				<![CDATA[
					<font face="Arial" size=2 color="#C0C0C0"><i>Copyright &copy; 2005-2010 JPPF Team.</i></font>
				]]>
			</bottom>
		</javadoc>
		<copy todir="${javadoc}/resources" overwrite="true">
			<fileset dir="${bin}">
				<include name="*.gif"/>
				<include name="*.jpg"/>
			</fileset>
		</copy>
		<property name="javadoc.file" value="${build}/${app.ver}-api.zip"/>
		<delete file="${javadoc.file}" quiet="true"/>
		<zip destfile="${javadoc.file}">
			<zipfileset dir="${javadoc}" includes="**/*.*" prefix="${app.ver}-api"/>
		</zip>
	</target>

	<target name="javadoc.package" description="Package the javadoc for deployment on the web site">
    <delete file="${docs}/api.tar.gz" quiet="true"/>
		<tar destfile="${docs}/api.tar.gz" compression="gzip" basedir="${home}" includes="api-2.0/**/*.*"/>
	</target>

	<!-- ========================================================================= -->
	<!--                        Zip the whole workspace                            -->
	<!-- ========================================================================= -->

	<target name="zip.workspace" description="Zip the whole workspace">
    <delete file="${basedir}/../../JPPF.zip" quiet="true"/>
		<zip destfile="${basedir}/../../JPPF.zip">
			<zipfileset dir="${basedir}/.." prefix="JPPF">
				<exclude name="**/*.lock"/>
				<exclude name="**/JPPF/docs/home/**/*.*"/>
				<exclude name="**/.history/"/>
				<exclude name="**/JPPF/build/"/>
				<exclude name="**/*.history"/>
				<exclude name="**/*.index"/>
				<exclude name="**/*.ear"/>
				<exclude name="**/*.rar"/>
				<exclude name="**/*.war"/>
			</zipfileset>
		</zip>
	</target>

</project> 
